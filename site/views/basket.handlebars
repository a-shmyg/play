<div class="main-title-box">
  <div class = "">
      <img src="images/download_text.png" alt="main_text" class="page_title_text" />
  </div>
</div>

{{> navbar user=userLoggedIn.name }}

{{#if error }}
  <h1 class = "error-message">{{this.errormessage}}</h1>
{{/if}}

<div class="context-box">
  <h4 class="title-content">Basket</h4>
</div>

<p class="animate">Get Ready to PLAY</p>

{{#if products}}
<a href="/basket/clearbasket"><button type="submit" class="form-submit">Empty Basket</button></a>
{{else}}
<p class="title-content-center">Your Basket is Empty!</p>
<a href="/downloads"><button type="submit" class="form-submit">Go to Downloads</button></a>
{{/if}}

{{#each products}}
  <div class="downloads-box">
      <p class="downloads-name title-content">  {{ this.name }}</p></br>
      <p class="downloads-description">{{ this.description }}</p></br>
      <p class="downloads-category">{{ this.category }}</p></br>
      <p class="downloads-price">{{ this.price }}</p></br>
      <p class="downloads-id">{{ this.id}}</p></br>
      <img class="downloads-image" src="images/comingsoon.png" alt="image" /></br>
      <a href="/basket/remove_product/{{ this.id }}"><button type="submit" class="downloads-submit">Remove from Basket</button></a>
  </div>
{{/each}}

{{#if products}}
  <h4 class="title-content">TOTAL PRICE: ${{ price }}</h4>
{{/if}}

{{#if products}}
<a href="/payment"><button type="submit" class="form-submit">Checkout</button></a>
{{/if}}

{{> footer }}
