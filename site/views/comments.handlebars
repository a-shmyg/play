<div class="main-title-box">
  <div class = "">
      <img src="images/comment_text.png" alt="main_text" class="page_title_text" />
  </div>
</div>

{{> navbar user=userLoggedIn.name basketPage=false}}

{{#if error }}
  <h1 class = "error-message">{{this.errormessage}}</h1>
{{/if}}

<div class="content-box">
  <h4 class="title-content title-content-main" id="comments-title">Leave Your Thoughts</h4>
  <div class="comments-form-box">
    <form action="/comments/submit_comment" class="comments-form" method="POST">

      <label for="content" class="form-label">COMMENT</label><br />
      <input type = "text" name = "content" value="comment default" class="comments-form-input" required></input>

      <input type = "submit" value = "submit" class="form-submit"></input>
    </form>
  </div>
</div>

<div class="content-box">
  <h4 class="title-content title-content-main">Look at Reviews</h4>

  {{#each comments}}
  <div class="comments-box">
      <p class="comment-username">{{ this.username }}</p>
      <p class="comment-time"> {{ this.postTime }}</p></br>
      <p class="comment-content">{{ this.comment }}</p></br>
  </div>
  {{/each}}
</div>



{{> footer }}
