<div class="main-title-box">
  <div class = "">
      <img src="images/download_text.png" alt="main_text" class="page_title_text" />
  </div>
</div>

{{> navbar user=userLoggedIn.name}}

 <div class="open">
   <div id='blink' class='blink'>
     <p id='blinkText'>{{this.userLoggedIn.name}}, YOU'RE IN</p>
   </div>
 </div>

<div class="receipt">
  {{#if orderId}}
  <h4 class="receipt-order">ORDER #{{this.orderId}}</h4>
  {{/if}}
  {{#each receiptDetails}}
    <p class="receipt-content">  {{ this.name }} .......... {{this.price}}</p></br>
  {{/each}}

  {{#if totalPrice}}
    <p class="receipt-total">TOTAL: ${{ this.totalPrice }}</p></br>
  {{/if}}
</div>

{{> footer }}
